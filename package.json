{
  "name": "cybercontracts",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:cyberconnecthq/cybercontracts.git",
  "author": "r@cyberconnect.me",
  "license": "MIT",
  "scripts": {
    "lint:check": "prettier --check **.sol && npx solhint --config ./config/.solhint.json --ignore-path ./config/.solhintignore 'src/**/*.sol'",
    "lint:fix": "prettier --write **.sol",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7"
  },
  "lint-staged": {
    "*.sol": "prettier --write"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "tabWidth": 4,
          "printWidth": 80,
          "bracketSpacing": true
        }
      }
    ]
  }
}
